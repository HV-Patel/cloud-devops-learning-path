pipeline {
    agent any
    tools {
        maven 'my_mvn'
    }
    
    environment {
        SERVER_IP = '3.82.130.168'  // Replace with your server IP
        TOMCAT_PORT = '8090'
        APP_CONTEXT = 'addressbook'
    }
    
    stages {
        stage("Checkout") {   
            steps {               	 
                git branch: 'main', url: 'https://github.com/manikcloud/cloud-devops-learning-path.git'        	 
            }    
        }
        
        stage('Navigate to Project') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/pipeline_deployment') {
                    sh "pwd && ls -la"
                }
            }
        }
        
        stage('Maven Clean') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/pipeline_deployment') {
                    sh "mvn clean"
                }
            }
        }
        
        stage('Maven Build') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/pipeline_deployment') {
                    sh "mvn compile"
                }
            }
        }
        
        stage("Unit Test") {          	 
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/pipeline_deployment') {
                    sh "mvn test"
                }
            }
        }
        
        stage("Maven Package") {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/pipeline_deployment') {
                    sh "mvn package"
                }
            }
        }
        
        stage("Deploy to Tomcat") {          	 
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/pipeline_deployment') {
                    deploy adapters: [tomcat9(credentialsId: 'tomcat-9', path: '', url: "http://${SERVER_IP}:${TOMCAT_PORT}")], contextPath: "/${APP_CONTEXT}", war: '**/target/*.war'
                }
            }
        }  	
    }
    
    post {
        always {
            dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/pipeline_deployment') {
                junit 'target/surefire-reports/*.xml'
            }
        }
        success {
            echo "‚úÖ Pipeline completed successfully!"
            echo "üöÄ App URL: http://${SERVER_IP}:${TOMCAT_PORT}/${APP_CONTEXT}/"
        }
        failure {
            echo "‚ùå Pipeline failed! Check the logs above."
        }
    }
}

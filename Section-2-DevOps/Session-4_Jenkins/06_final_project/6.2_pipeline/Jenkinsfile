pipeline {
    agent any
    tools {
        maven 'maven'
    }
    // Pipeline configuration: Uses any available agent and Maven tool named 'maven'
    
    environment {
        SERVER_IP = '98.86.230.111'  // Your server IP
        TOMCAT_PORT = '8090'
        APP_CONTEXT = 'addressbook'
    }
    // Environment variables: Define server details for deployment target
    
    stages {
        stage("Checkout") {   
            steps {               	 
                git branch: 'main', url: 'https://github.com/manikcloud/cloud-devops-learning-path.git'        	 
            }    
        }
        // Checkout stage: Downloads source code from GitHub repository main branch
        
        stage('Navigate to Project') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.2_pipeline') {
                    sh "pwd && ls -la"
                }
            }
        }
        // Navigation stage: Changes to project directory and lists files for verification
        
        stage('Maven Clean') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.2_pipeline') {
                    sh "mvn clean"
                }
            }
        }
        // Clean stage: Removes previous build artifacts to ensure fresh build
        
        stage('Maven Build') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.2_pipeline') {
                    sh "mvn compile"
                }
            }
        }
        // Build stage: Compiles Java source code into bytecode
        
        stage("Unit Test") {          	 
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.2_pipeline') {
                    sh "mvn test"
                }
            }
        }
        // Test stage: Runs unit tests to verify code functionality
        
        stage("Maven Package") {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.2_pipeline') {
                    sh "mvn package"
                }
            }
        }
        // Package stage: Creates WAR file for web application deployment
        
        stage("Deploy to Tomcat") {          	 
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.2_pipeline') {
                    script {
                        echo "Starting deployment to Tomcat..."
                        echo "Target URL: http://${SERVER_IP}:${TOMCAT_PORT}"
                        echo "WAR file: target/addressbook.war"
                        echo "Context path: /${APP_CONTEXT}"
                    }
                    
                    deploy adapters: [tomcat9(credentialsId: 'tomcat-9', path: '', url: "http://${SERVER_IP}:${TOMCAT_PORT}")], 
                           contextPath: "/${APP_CONTEXT}", 
                           war: '**/target/*.war'
                    
                    script {
                        echo "Deployment completed successfully!"
                        echo "Application URL: http://${SERVER_IP}:${TOMCAT_PORT}/${APP_CONTEXT}/"
                    }
                }
            }
        }
        // Deploy stage: Uploads WAR file to Tomcat server using configured credentials
    }
    
    post {
        always {
            dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.2_pipeline') {
                script {
                    if (fileExists('target/surefire-reports/*.xml')) {
                        junit 'target/surefire-reports/*.xml'
                    } else {
                        echo "No test results found"
                    }
                }
            }
        }
        // Always block: Publishes test results regardless of build outcome
        
        success {
            echo "Pipeline completed successfully!"
            echo "App URL: http://${SERVER_IP}:${TOMCAT_PORT}/${APP_CONTEXT}/"
        }
        // Success block: Displays success message and application URL when build passes
        
        failure {
            echo "Pipeline failed! Check the logs above."
        }
        // Failure block: Displays error message when build fails
    }
}

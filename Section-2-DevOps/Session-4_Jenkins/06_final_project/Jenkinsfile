pipeline {
    agent any
    tools {
        maven 'my_mvn'
    }
    stages {
        stage("Checkout") {   
            steps {               	 
                git branch: 'main', url: 'https://github.com/manikcloud/cloud-devops-learning-path.git'        	 
            }    
        }
        stage('Navigate to Project') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project') {
                    sh "pwd && ls -la"
                }
            }
        }
        stage('Maven Clean') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project') {
                    sh "mvn clean"
                }
            }
        }
        stage('Maven Build') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project') {
                    sh "mvn compile"
                }
            }
        }
        stage("Unit Test") {          	 
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project') {
                    sh "mvn test"
                }
            }
        }
        stage("Maven Package") {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project') {
                    sh "mvn package"
                }
            }
        }
        stage("Deploy On Server") {          	 
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project') {
                    deploy adapters: [tomcat9(credentialsId: 'tomcat-9', path: '', url: 'http://3.82.130.168:8090')], contextPath: '/addressbook', war: '**/target/*.war'
                }
            }
        }  	
    }
    post {
        always {
            dir('Section-2-DevOps/Session-4_Jenkins/06_final_project') {
                junit 'target/surefire-reports/*.xml'
            }
        }
        success {
            echo "‚úÖ Pipeline completed successfully!"
            echo "üöÄ App URL: http://3.82.130.168:8090/addressbook/"
        }
        failure {
            echo "‚ùå Pipeline failed!"
        }
    }
}
